@model Car

<h2>@Model.Name</h2>

<div>
    <img alt="@Model.Name" src="@Model.ImageUrlThumbnail"/>
    <div>
        <h3>@Model.Price.ToString("c")</h3>
        <h4>@Model.DescriptionShort</h4>
        <p>@Model.Description</p>
        <p class="button">
            <a class="btn btn-primary"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-carId="@Model.Id">
                Add to cart
            </a>
        </p>    
    </div>
</div>